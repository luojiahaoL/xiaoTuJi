<view class="img">
  <view class="img_left">
    <view class="img_left_cent" wx:for="{{list}}" wx:key="index" wx:if="{{index%2 == 0}}">
      <image mode="widthFix" src="{{item.img}}" data-url="{{item.img}}" bindlongpress="img"></image>
      <text>{{item.name}}</text>
    </view>
  </view>
  <view class="img_right">
    <view class="img_right_cent" wx:for="{{list}}" wx:key="index" wx:if="{{index%2 != 0}}">
      <image mode="widthFix" src="{{item.img}}" data-url="{{item.img}}" bindlongpress="img"></image>
      <text>{{item.name}}</text>
    </view>
  </view>
</view>